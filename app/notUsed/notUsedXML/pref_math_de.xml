<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="5"
        android:key="pre_decimal_places_pref"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Anzahl der Vorkommastellen im Ergebnis"
        android:inputType="numberDecimal"
        android:digits="0123456789"
        />
    <EditTextPreference
        android:defaultValue="5"
        android:key="decimal_places_pref"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:dialogLayout="@layout/pref_decimal_place"
        android:inputType="numberDecimal"
        android:digits="0123456789"
        android:title="Anzahl der Nachkommastellen im Ergebnis" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="solve_inst_pref"
        android:title="Zeige Ergebnis sofort" />
    <ListPreference
        android:defaultValue="arithmetischer Mittelwert"
        android:entries="@array/mittelwert_de"
        android:entryValues="@array/mittelwert_de"
        android:key="mean_mode"
        android:title="Mittelwert Typ" />
    <ListPreference
        android:defaultValue="arithmetische Varianz"
        android:entries="@array/varianz_de"
        android:entryValues="@array/varianz_val"
        android:key="var_mode"
        android:title="Varianz Typ" />
</PreferenceScreen>