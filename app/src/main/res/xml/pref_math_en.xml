<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="5"
        android:key="pre_decimal_places_pref"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="number of pre-decimal places in the result"/>
    <EditTextPreference
        android:defaultValue="5"
        android:key="decimal_places_pref"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="number of decimal places in the result" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="solve_inst_pref"
        android:title="show result immediately" />
</PreferenceScreen>