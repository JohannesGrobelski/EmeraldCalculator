<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="FlatButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/background</item>

        <item name="android:textAlignment">center</item>
        <item name="android:visibility">visible</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">0sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:shadowRadius">30</item>
    </style>

    <style name="NumberFlatButton" parent="FlatButton">

        <item name="background">@drawable/button_number</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FunctionFlatButton" parent="FlatButton">
        <item name="background">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
